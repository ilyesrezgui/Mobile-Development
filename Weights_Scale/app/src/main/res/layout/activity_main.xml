<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60CDDC39"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="594dp"
        android:fontFamily="serif"
        android:text="Sign Up"
        android:textColor="#A64A1F"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/username"
        android:layout_width="304dp"
        android:layout_height="59dp"
        android:layout_margin="15px"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="100dp"
        android:background="#30d54f49"
        android:fontFamily="sans-serif"
        android:hint="Enter your User Name"
        android:padding="15px"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.371" />

    <EditText
        android:id="@+id/email"
        android:layout_width="304dp"
        android:layout_height="59dp"
        android:layout_margin="15px"
        android:layout_marginStart="51dp"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="666dp"
        android:background="#30d54f49"
        android:fontFamily="sans-serif"
        android:hint="Enter your E-mail"
        android:padding="15px"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321" />

    <EditText
        android:id="@+id/pwd2"
        android:layout_width="304dp"
        android:layout_height="59dp"
        android:layout_margin="15px"
        android:layout_marginStart="51dp"
        android:layout_marginTop="667dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="326dp"
        android:background="#30d54f49"
        android:fontFamily="sans-serif"
        android:hint="Validate Your Password"
        android:inputType="textPassword"
        android:padding="15px"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="304dp"
        android:layout_height="59dp"
        android:layout_margin="15px"
        android:layout_marginStart="51dp"
        android:layout_marginTop="667dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="326dp"
        android:background="#30d54f49"
        android:fontFamily="sans-serif"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:padding="15px"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />


    <Button
        android:id="@+id/button"
        android:layout_width="189dp"
        android:layout_height="54dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="225dp"
        android:backgroundTint="#9D6850"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="137dp"
        android:layout_height="120dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo_transparent" />

    <ProgressBar
        android:id="@+id/pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="377dp"
        android:layout_height="92dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="635dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:progress="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--change the button color-->


</androidx.constraintlayout.widget.ConstraintLayout>